<%= form_with(model: recipe, local: true) do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <h3>Recipe Title:</h3>
    <%= form.text_field :title, class: 'form-control input-lg',placeholder: 'Pasta Bolognese'%>
  </div>

  <div class="form-group">
    <h3>Ingredients:</h3>
    <%= form.text_area :ingredients, class: 'form-control input-lg',placeholder: 'Pasta                                                                                                                                                                                                                                                                       Tomatoes...'%>
  </div>

  <div class="form-group">
    <h3>Description:</h3>
    <%= form.text_area :desc, class: 'form-control input-lg',placeholder: 'Do this this and this...'%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
